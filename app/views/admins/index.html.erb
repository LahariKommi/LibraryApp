<p id="notice"><%= notice %></p>


<div class = "container">
  <h1 align="center">Admins</h1>
  </div>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td><%= link_to 'Edit Profile', edit_admin_path(admin) %></td>
        <td><%= button_to 'Delete', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br> <br>


<h4 align="center"><%= link_to 'Add new admin', new_admin_path %></h4>
